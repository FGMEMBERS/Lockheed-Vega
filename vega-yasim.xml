<!-- Lockheed Vega - 2009 BARANGER Emmanuel

     Wingspan            : 12.49 m ( 41 ft 0 in )
     Length              :  8.38 m ( 27 ft 6 in )
     Height              :  2.59 m (  8 ft 6 in)
     Engines             : 1 x Pratt & Whitney Wasp R1340C (500 ch )
     Empty mass          : 1163 kg ( 2565 lb )
     Cruise speed        : 256 km/h (143 kts)
     Cruise max          : 298 km/h (160 kts)
-->

<airplane mass="2565" >

  <approach speed="73" aoa="8" fuel="0.05" >
    <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
    <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
  </approach>

  <cruise speed="143" alt="0" fuel="0.5" >
    <control-setting axis="/controls/engines/engine[0]/throttle" value="1.0" />
    <control-setting axis="/controls/engines/engine[0]/mixture" value="0.6" />
  </cruise>

  <cockpit x="2.512" y="0" z="0.587"/>

  <fuselage ax="3.860" ay="0.0" az="-0.253" bx="-4.107" by="0" bz="-0.130" width="1.342" taper="0.3" midpoint="0.02"/>

  <wing x="1.375" y="0" z="0.564"
        chord="2.485"
        length="6.238"
        taper="0.63"
        camber="0.001"
        dihedral="2"
        incidence="4"
        sweep="-2">
        <stall aoa="14" width="5" peak="1.5"/>
        <flap1 start="0.49" end="0.88" lift="1.4" drag="1.1"/>

        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>

        <control-output control="FLAP1" side="left" prop="surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right" prop="surface-positions/right-aileron-pos-norm"/>

  </wing>

  <hstab x="-3.105" y="0.358" z="-0.123"
         chord="1.352"
         length="1.792"
         taper="1">
         <stall aoa="17" width="8" peak="1.5"/>
         <flap0 start="0.0" end="1" lift="1.55" drag="1.3"/>

         <control-input axis="/controls/flight/elevator" control="FLAP0"/>
         <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>

         <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
  </hstab>

  <vstab x="-3.150" y="0" z="0.090"
	 chord="1.890"
	 length="1.411"
         taper="0.60"
         sweep="10">
         <stall aoa="15" width="4" peak="1.5"/>
         <flap0 start="0" end="1" lift="1.3" drag="1.3"/>

         <control-input axis="/controls/flight/rudder" square="true" control="FLAP0" invert="true"/>
         <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>

         <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm" min="1" max="-1"/>
  </vstab>

  <!-- sources   : http://dic.academic.ru/dic.nsf/enwiki/557429

       Engines   : Pratt & Whitney Wasp R1340C
                 : 9 cylinders
                 : Displacement 1,343 in3 (  22 l  )
                 : weight         805 lb  ( 365 kg )
                 : Cruise         542 hp  (404 kW  ) at 2,200 rpm at 5,000 ft (1,525 m)
                 : Compression  6.0:1
  -->
  <propeller x="4.007" y="0.0" z="-0.253"
             mass="805"
             moment="2.5"
             radius="1.44"
             cruise-power="450"
             cruise-alt="0"
             cruise-speed="143"
             cruise-rpm="2200"
             takeoff-power="300"
             takeoff-rpm="1950">
             <piston-engine eng-rpm="2700"
                            alt="5000"
                            eng-power="500"
                            displacement="1343"
                            compression="6.0"/>
             <actionpt x="4.000" y="0.0" z="-0.253" />
             <control-input control="THROTTLE" axis="/controls/engines/engine[0]/throttle"/>
             <control-input control="STARTER" axis="/controls/engines/engine[0]/starter"/>
             <control-input control="MAGNETOS" axis="/controls/engines/engine[0]/magnetos"/>
             <control-input control="MIXTURE" axis="/controls/engines/engine[0]/mixture"/>
  </propeller>

  <!-- left main -->
  <gear x="2.080" y="1.214" z="-1.972"
        compression=".2"
        spring="0.8"
        damp="1.2"
        sfric="1.0"
        dfric="1.0">
        <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
  </gear>

  <!-- right main -->
  <gear x="2.080" y="-1.214" z="-1.972"
        compression=".2"
        spring="0.8"
        damp="1.2"
        sfric="1.0"
        dfric="1.0">
        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
  </gear>

  <!-- Tail wheel  -->
  <gear x="-2.624" y="0" z="-0.875"
        compression="0.2"
        spring="0.8"
        damp="1.2"
        sfric="1.0"
        dfric="1.0">
  </gear>

  <!-- Fuel  -->  
  <!-- Forward 526.3 lbs -->
  <tank x="2.876" y="0" z="0.156" capacity="526.3" />
  <!-- Fuselage 1285.2 lbs -->
  <tank x="1.999" y="0" z="0.156" capacity="1285.2" />

  <!-- CG theorique centre de la corde x=1.375 y=0.0 z=-0.564 
  <ballast x="0" y="0" z="-8" mass="400" /> -->

</airplane>

